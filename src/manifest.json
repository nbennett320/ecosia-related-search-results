{
  "version": "1.0.0",
  "manifest_version": 2,
  "name": "Ecosia Addon in React",
  "short_name": "E.A.R.",
  "description": "A tool that makes planting trees even easier.",
  "content_scripts": [
    {
      "matches": [
        "*://*.ecosia.org/*"
      ],
      "js": [
        "lib/js/browser-polyfill.js",
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "lib/js/browser-polyfill.js",
      "background.js"
    ]
  },
  "permissions": [
    "*://*.ecosia.org/*",
    "storage",
    "unlimitedStorage",
    "webRequest"
  ],
  "icons": {
    "128": "img/icon-128.png",
    "256": "img/icon-256.png",
    "512": "img/icon-512.png"
  }
}
